{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "node",
		"jsx": "react",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"removeComments": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"forceConsistentCasingInFileNames": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"baseUrl": "./src",
		"incremental": true,
		"declaration": true,
		"allowJs": true,
		"checkJs": true,
		"resolveJsonModule": true,
	},
	"exclude": [
		".vscode",
		"./.yarn",
		"./dist",
		".pnp.js",
	],
}
